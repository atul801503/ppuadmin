<% layout('/layouts/boilerplate.ejs') %>
<link rel="stylesheet" href="/css/edit/style.css">
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3 style="text-align: center; text-transform: capitalize;"><b>Edit your listing</b></h3>
            <form action="/listings/<%= list?._id %>?_method=PUT" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="listing[title]" id="title" value="<%= list?.title || '' %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" name="listing[description]" rows="3" id="description" cols="50"><%= list?.description || '' %></textarea>
                </div>
                <div class="mb-3">
                    Original Image <br>
                    <% if (originalImageUrl) { %>
                        <a href="<%= originalImageUrl %>"><img class="col-2" src="<%= originalImageUrl %>" alt="Listing Image"></a>
                    <% } else { %>
                        <p>No image available</p>
                    <% } %>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="link">Upload New Image</label>
                    <input class="form-control" type="file" name="listing[image]">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-3">
                        <label class="form-label" for="price">Price</label>
                        <input class="form-control" type="number" name="listing[price]" id="price" value="<%= list?.price || '' %>">
                    </div>
                    <div class="mb-3 col-md-4">
                        <label class="form-label" for="country">Country</label>
                        <input class="form-control" type="text" name="listing[country]" id="country" value="<%= list?.country || '' %>">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="listing[location]" id="location" value="<%= list?.location || '' %>">
                </div>
                <button class="btn btn-dark add-btn offset-5 mt-3 mb-5">Submit</button>
            </form>
        </div>
    </div>
</body>
