<style>
  
  .custom-marker {
    position: relative;
    width: 60px;
    height: 60px;
    background-color:  #ff007f; /* Pink color */
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
}

.custom-marker::after {
    content: '';
    position: absolute;
    width: 70px;
    height: 70px;
    background-color:  rgba(255, 0, 127, 0.2); /* Lighter pink circle */
    border-radius: 50%;
    z-index: -1; /* Behind the main marker */
}
.custom-marker::before {
    content: '';
    position: absolute;
    width: 90px;
    height: 90px;
    background-color: rgba(255, 0, 127, 0.2); /* Lighter pink circle */
    border-radius: 50%;
    z-index: -1; /* Behind the main marker */
}

.custom-marker-icon {
    color: white;
    font-size: 20px;
}

.mapboxgl-popup-content {
    text-align: center;
}


